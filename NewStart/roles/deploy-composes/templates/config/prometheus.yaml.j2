---
global:
  scrape_interval: 15s

scrape_configs:
  - job_name: 'prometheus'
    scrape_interval: 5s
    static_configs:
      - targets: ['localhost:9090']

  - job_name: 'node_exporter'
    static_configs:
{% for host in groups['Monitoring'] %}
      - targets:
          - '{{ hostvars[host].node_exporter_host }}:9100'
        labels:
          node: '{{ hostvars[host].ansible_hostname }}'
{% endfor %}
